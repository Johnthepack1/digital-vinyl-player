[Unit]
Description=Spotify (Chromium) background window
After=graphical-session.target network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority

# Start chromium
ExecStart=%h/digital-vinyl-player/bin/spotify_kiosk.sh

# After chromium starts, try to resume playback (every start/restart)

Restart=on-failure
RestartSec=2

[Install]
WantedBy=default.target
